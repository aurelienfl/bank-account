<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.coface.corp</groupId>
    <artifactId>bank-account</artifactId>
    <version>1.0.0</version>
  </parent>
  <artifactId>bank-account-ear</artifactId>
  <packaging>ear</packaging>
  <name>bank-account-ear</name>
  
  <build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<!-- configuring the ear plugin -->
				<configuration>
					<defaultLibBundleDir>APP-INF/lib</defaultLibBundleDir>
					<skinnyWars>true</skinnyWars>
					<filtering>true</filtering>
					<!-- Due to an issue with Eclipse -->
					<generateApplicationXml>false</generateApplicationXml>
					<version>5</version>
					<modules>
						<webModule>
							<groupId>com.coface.corp</groupId>
							<artifactId>bank-account-war</artifactId>
							<bundleFileName>bank-account.war</bundleFileName>
							<contextRoot>bank-account</contextRoot>
						</webModule>
					</modules>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.github.goldin</groupId>
				<artifactId>copy-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>cleanDistrib</id>
						<phase>clean</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<resources>
								<resource>
									<directory>${project.distribdir}</directory>
									<clean>true</clean>
									<cleanEmptyDirectories>true</cleanEmptyDirectories>
									<failIfNotFound>false</failIfNotFound>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copyToDistrib</id>
						<phase>package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<resources>
								<resource>
									<targetPath>${project.distribdir}/applications</targetPath>
									<file>${project.basedir}/target/${project.build.finalName}.ear</file>
									<failIfNotFound>false</failIfNotFound>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
  
  
  <dependencies>
    <dependency>
		<groupId>com.coface.corp</groupId>
		<artifactId>bank-account-war</artifactId>
		<version>1.0.0</version>
		<type>war</type>
	</dependency>
	<dependency>
		<groupId>com.coface.corp.framework</groupId>
		<artifactId>core</artifactId>
	</dependency>
	<dependency>
		<groupId>com.coface.corp.framework.security</groupId>
		<artifactId>framework-security</artifactId>
	</dependency>
	<dependency>
		<groupId>com.coface.corp.framework.security</groupId>
		<artifactId>framework-web</artifactId>			
	</dependency> 
	<dependency>
		<groupId>org.springframework</groupId>
		<artifactId>spring-web</artifactId>
	</dependency>
	<dependency>
		<groupId>org.springframework</groupId>
		<artifactId>spring-context</artifactId>
	</dependency>
	<dependency>
		<groupId>org.springframework</groupId>
		<artifactId>spring-webmvc</artifactId>
	</dependency>
  </dependencies>
</project>
